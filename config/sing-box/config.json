{
  "log": {
    "level": "warn",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "direct",
        "address": "tcp://1.1.1.1",
        "detour": "direct"
      },
      {
        "tag": "proxy",
        "address": "tcp://1.1.1.1",
        "detour": "proxy"
      }
    ],
    "rules": [
      {
        "protocol": "bittorrent",
        "server": "direct"
      },
      {
        "domain_suffix": "<DOMAINS_DIRECT>",
        "server": "direct"
      },
      {
        "domain_suffix": "<DOMAINS_PROXY>",
        "server": "proxy"
      },
      {
        "inbound": "proxy-in",
        "server": "proxy"
      },
      {
        "package_name": "<ANDROID_PACKAGES>",
        "server": "proxy"
      },
      {
        "inbound": "tun-in",
        "process_name": "<PROCESSES_PROXY>",
        "server": "proxy"
      }
    ],
    "final": "direct",
    "strategy": "ipv4_only",
    "disable_cache": false,
    "disable_expire": false,
    "independent_cache": true,
    "cache_capacity": 0
  },
  "inbounds": [
    {
      "type": "tun",
      "tag": "tun-in",
      "address": "172.19.0.1/30",
      "auto_route": true,
      "auto_redirect": true,
      "strict_route": true
    },
    {
      "type": "mixed",
      "tag": "proxy-in",
      "listen": "127.0.0.1",
      "listen_port": 9051,
      "sniff_override_destination": true
    }
  ],
  "outbounds": [
    "<OUTBOUND_PROXY>",
    {
      "type": "direct",
      "tag": "direct"
    }
  ],
  "route": {
    "rules": [
      {
        "action": "sniff"
      },
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "ip_is_private": true,
        "outbound": "direct"
      },
      {
        "protocol": "bittorrent",
        "outbound": "direct"
      },
      {
        "domain_suffix": "<DOMAINS_DIRECT>",
        "outbound": "direct"
      },
      {
        "domain_suffix": "<DOMAINS_PROXY>",
        "outbound": "proxy"
      },
      {
        "inbound": "proxy-in",
        "outbound": "proxy"
      },
      {
        "package_name": "<ANDROID_PACKAGES>",
        "outbound": "proxy"
      },
      {
        "inbound": "tun-in",
        "process_name": "<PROCESSES_PROXY>",
        "outbound": "proxy"
      }
    ],
    "final": "direct",
    "auto_detect_interface": true
  }
}
